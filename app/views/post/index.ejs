<h1>All the posts go here</h1>
<% posts.map((post) => { %>
  <a href="/posts/<%= post.id %>"><%= post.title %></a>
  <p><%= post.description %></p>
  <a href="/posts/<%= post.id %>/edit">Edit</a> <br>
  <form method="POST" action="/posts/<%= post.id %>?_method=DELETE">
    <button type="submit">Delete</button>
  </form>
<% }) %>
